<script>
// Sample data for categories
const categories = {
  tech: ["AAPL", "GOOGL", "MSFT", "META", "NVDA", "AMD", "INTC", "IBM", "ORCL", "CRM", "SAP", "ADSK", "NOW", "SNOW", "PANW", "FTNT", "CRWD", "ZS", "DDOG", "MDB", "TEAM", "DOCU", "SHOP", "SQ", "PYPL", "ABNB", "UBER", "LYFT", "DASH", "TOST", "ZM", "ETSY", "TWLO", "OKTA", "NET", "PLTR", "RBLX", "SPOT", "AKAM", "HPE", "HPQ", "DELL", "TXN", "MU", "LRCX", "KLAC", "ASML", "TSM", "AMAT", "NXPI", "AVGO", "QRVO", "QCOM", "ADI", "SWKS", "MCHP", "STM", "WDC", "WDAY", "CDNS", "SNPS", "ANSS", "INTU", "GLOB", "EPAM", "DOCS", "DUOL", "COUR", "HUBS", "VEEV", "PTC", "FSLR", "ENPH", "RUN"],
  finance: ["JPM", "BAC", "C", "WFC", "GS", "MS", "SCHW", "BK", "USB", "PNC", "COF", "AXP", "DFS", "BLK", "BX", "KKR", "CG", "APO", "TROW", "IVZ", "AFL", "MET", "PRU", "AIG", "TRV", "CB", "MMC", "AJG", "SPGI", "MCO", "ICE", "CME", "MSCI", "FDS", "NDAQ", "BR", "PAYC", "GPN", "FIS", "FISV", "SOFI", "LC", "AFRM", "HOOD"],
  retail: ["AMZN", "COST", "WMT", "TGT", "HD", "LOW", "BBY", "M", "KSS", "DG", "DLTR", "TJX", "ROST", "ULTA", "NKE", "ADDYY", "LULU", "UAA", "CROX", "PVH", "RL", "GPS", "AEO", "DECK", "HBI", "SKX", "ELF"],
  industry: ["TSLA", "F", "GM", "TM", "HMC", "RIVN", "NKLA", "LCID", "PCAR", "CAT", "DE", "CMI", "ETN", "EMR", "MMM", "HON", "GE", "LMT", "NOC", "RTX", "BA", "GD"],
  energy: ["XOM", "CVX", "COP", "OXY", "SLB", "HAL", "BKR", "DVN", "MRO", "APA", "EOG", "PXD", "BP", "SHEL", "TOT", "ENB"],
  health: ["JNJ", "PFE", "MRK", "BMY", "AMGN", "GILD", "ABBV", "LLY", "REGN", "BIIB", "VRTX", "ZTS", "MRNA", "NVCR", "ILMN", "TMO"],
  realestate: ["VNO", "DLR", "EQIX", "CPT", "AMT", "CCI", "SBAC", "EQR", "AVB"],
  international: ["BABA", "BIDU", "JD", "PDD", "TCEHY", "INFY", "WIT", "RELIANCE", "NIO", "XPENG", "BYDDF", "SONY", "TMUS", "VZ"]
};

// Function to load selected category
let chartInstance = null;
function loadCategory(categoryKey) {
  const firms = categories[categoryKey];
  if (!firms) return;

  // Create labels
  const labels = firms;

  // Generate random values (e.g., between 50-300)
  const dataValues = firms.map(() => Math.floor(50 + Math.random() * 250));

  // Fibonacci ratios
  const fibRatios = [0.382, 0.618, 1, 1.618, 2.618];

  // Max value
  const maxVal = Math.max(...dataValues);
  const fibLines = fibRatios.map(r => maxVal * r);

  // Create canvas
  const container = document.getElementById('chartContainer');
  container.innerHTML = ''; // Reset
  const canvas = document.createElement('canvas');
  container.appendChild(canvas);

  // Destroy previous chart if exists
  if (chartInstance) chartInstance.destroy();

  chartInstance = new Chart(canvas, {
    type: 'line',
    data: {
      labels: labels,
      datasets: [{
        label: 'Company Values',
        data: dataValues,
        fill: false,
        borderColor: 'white',
        backgroundColor: 'white',
        tension: 0.4,
        pointRadius: 2,
        pointHoverRadius: 4,
        borderWidth: 2,
      }]
    },
    options: {
      responsive: true,
      plugins: {
        legend: { display: false },
        title: { display: true, text: 'Company Values with Fibonacci Lines', color: 'white', font: { size: 20 } },
        // No need for annotation plugin here as we are using custom afterDraw
      },
      scales: {
        x: {
          ticks: { color: 'white', font: { size: 10 } },
          grid: { color: 'rgba(255,255,255,0.1)' }
        },
        y: {
          beginAtZero: true,
          ticks: { color: 'white' },
          grid: { color: 'rgba(255,255,255,0.1)' }
        }
      }
    },
    plugins: [{
      id: 'fibLines',
      afterDraw: (chart) => {
        const ctx = chart.ctx;
        ctx.save();
        ctx.strokeStyle = 'rgba(255,255,255,0.3)';
        ctx.lineWidth = 1;
        ctx.setLineDash([5, 5]);
        fibLines.forEach(line => {
          const y = chart.scales.y.getPixelForValue(line);
          ctx.beginPath();
          ctx.moveTo(chart.chartArea.left, y);
          ctx.lineTo(chart.chartArea.right, y);
          ctx.stroke();
        });
        ctx.restore();
      }
    }]
  });
}

// Load default category
loadCategory('tech');
</script>

